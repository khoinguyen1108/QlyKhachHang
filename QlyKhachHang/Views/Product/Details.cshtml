@model QlyKhachHang.Models.Product

@{
    ViewData["Title"] = "Chi Ti?t S?n Ph?m";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
            <i class="fas fa-edit"></i> S?a
        </a>
        <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-secondary">Quay L?i</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thông Tin S?n Ph?m</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.ProductId</dd>

                    <dt class="col-sm-3">Tên:</dt>
                    <dd class="col-sm-9">@Model.ProductName</dd>

                    <dt class="col-sm-3">Mô T?:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Giá:</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("C0")</dd>

                    <dt class="col-sm-3">T?n Kho:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Stock > 0 ? "bg-success" : "bg-danger")">
                            @Model.Stock
                        </span>
                    </dd>

                    <dt class="col-sm-3">Danh M?c:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>

                    <dt class="col-sm-3">Ngày T?o:</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                </dl>
            </div>
        </div>

        @if (Model.CartItems.Any() || Model.Reviews.Any() || Model.InvoiceDetails.Any())
        {
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Th?ng Kê</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h3>@Model.CartItems.Count</h3>
                                <p>M?t hàng trong gi? hàng</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h3>@Model.Reviews.Count</h3>
                                <p>?ánh giá</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-light rounded">
                                <h3>@Model.InvoiceDetails.Count</h3>
                                <p>M?t hàng ?ã bán</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
