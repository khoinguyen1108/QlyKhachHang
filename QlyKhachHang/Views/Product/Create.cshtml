@model QlyKhachHang.Models.Product

@{
    ViewData["Title"] = "Thêm S?n Ph?m";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Tên S?n Ph?m</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô T?</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label">Giá (VN?)</label>
                    <input asp-for="Price" type="number" class="form-control" step="1000" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label">T?n Kho</label>
                    <input asp-for="Stock" type="number" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Danh M?c</label>
                <select asp-for="Category" class="form-control">
                    <option value="">-- Ch?n Danh M?c --</option>
                    <option value="Áo">Áo</option>
                    <option value="Qu?n">Qu?n</option>
                    <option value="Váy">Váy</option>
                    <option value="Giày">Giày</option>
                    <option value="Ph? Ki?n">Ph? Ki?n</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <a asp-action="Index" class="btn btn-secondary">H?y</a>
                <button type="submit" class="btn btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
