@model IEnumerable<QlyKhachHang.Models.Product>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm Sản Phẩm
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Mô Tả</th>
                    <th>Giá</th>
                    <th>Tồn Kho</th>
                    <th>Danh Mục</th>
                    <th>Ngày Tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C0")</td>
                        <td>
                            <span class="badge @(item.Stock > 0 ? "bg-success" : "bg-danger")">
                                @item.Stock
                            </span>
                        </td>
                        <td>@item.Category</td>
                        <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm btn-action">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm btn-action">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm btn-action">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Không có sản phẩm nào. <a asp-action="Create">Thêm sản phẩm mới</a></p>
    </div>
}