@model QlyKhachHang.Models.CustomerNote
@{
    ViewData["Title"] = "Thêm Ghi Chú";
    var customerId = (int?)ViewData["CustomerId"];
    var customerName = ViewData["CustomerName"]?.ToString() ?? "";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Thêm Ghi Chú - <strong>@customerName</strong></h2>
            <hr>
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="CustomerId" value="@customerId" />
                <div class="mb-3">
                    <label asp-for="NoteContent" class="form-label">Nội Dung Ghi Chú *</label>
                    <textarea asp-for="NoteContent" class="form-control" rows="5" placeholder="Nhập nội dung ghi chú..."></textarea>
                    <span asp-validation-for="NoteContent" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NoteType" class="form-label">Loại Ghi Chú</label>
                            <select asp-for="NoteType" class="form-select">
                                <option value="General">Chung</option>
                                <option value="FollowUp">Theo Dõi</option>
                                <option value="Complaint">Khiếu Nại</option>
                                <option value="Suggestion">Gợi Ý</option>
                                <option value="Other">Khác</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Priority" class="form-label">Độ Ưu Tiên</label>
                            <select asp-for="Priority" class="form-select">
                                <option value="Low">Thấp</option>
                                <option value="Normal" selected>Bình Thường</option>
                                <option value="High">Cao</option>
                                <option value="Urgent">Khẩn Cấp</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="CreatedBy" class="form-label">Tác Giả</label>
                    <input asp-for="CreatedBy" class="form-control" placeholder="Tên người tạo ghi chú...">
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu Ghi Chú
                    </button>
                    <a asp-action="ByCustomer" asp-route-customerId="@customerId" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}