@model IEnumerable<QlyKhachHang.Models.CustomerNote>

@{
    ViewData["Title"] = "Qu?n Lý Ghi Chú Khách Hàng";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2 class="page-title"><i class="fas fa-sticky-note"></i> @ViewData["Title"]</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-users"></i> Qu?n Lý Khách Hàng
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Danh Sách Ghi Chú
                <span class="badge bg-light text-dark float-end">@Model.Count() ghi chú</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Khách Hàng</th>
                            <th>N?i Dung</th>
                            <th>Lo?i</th>
                            <th>M?c ??</th>
                            <th>Tác Gi?</th>
                            <th>Ngày T?o</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NoteId</td>
                                <td>
                                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.CustomerId">
                                        <i class="fas fa-user"></i> @item.Customer.CustomerName
                                    </a>
                                </td>
                                <td>
                                    <div class="note-content">
                                        @if (item.NoteContent.Length > 100)
                                        {
                                            @item.NoteContent.Substring(0, 100)
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @item.NoteContent
                                        }
                                    </div>
                                </td>
                                <td>
                                    @switch (item.NoteType)
                                    {
                                        case "FollowUp":
                                            <span class="badge bg-info">?? Theo Dõi</span>
                                            break;
                                        case "Complaint":
                                            <span class="badge bg-danger">?? Khi?u N?i</span>
                                            break;
                                        case "Suggestion":
                                            <span class="badge bg-success">?? G?i Ý</span>
                                            break;
                                        case "General":
                                            <span class="badge bg-secondary">?? Chung</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.NoteType</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (item.Priority)
                                    {
                                        case "Urgent":
                                            <span class="badge bg-danger">?? Kh?n C?p</span>
                                            break;
                                        case "High":
                                            <span class="badge bg-warning">?? Cao</span>
                                            break;
                                        case "Normal":
                                            <span class="badge bg-info">?? Bình Th??ng</span>
                                            break;
                                        case "Low":
                                            <span class="badge bg-secondary">? Th?p</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.Priority</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CreatedBy))
                                    {
                                        <i class="fas fa-user-edit"></i>
                                        @item.CreatedBy
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        <i class="fas fa-calendar"></i> @item.CreatedDate.ToString("dd/MM/yyyy")<br/>
                                        <i class="fas fa-clock"></i> @item.CreatedDate.ToString("HH:mm")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.NoteId" class="btn btn-warning btn-sm btn-action">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.NoteId" method="post" class="d-inline"
                                          onsubmit="return confirm('B?n có ch?c mu?n xóa ghi chú này?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm btn-action">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Ch?a có ghi chú nào. Vui lòng vào <a asp-controller="Customer" asp-action="Index">Qu?n Lý Khách Hàng</a>
        và ch?n khách hàng ?? thêm ghi chú.
    </div>
}

<style>
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        border-bottom: 3px solid #667eea;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .btn-action {
        padding: 5px 10px;
        margin: 2px;
    }

    .table td {
        vertical-align: middle;
    }

    .note-content {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
