@{
    ViewData["Title"] = "Trang Chủ - Hệ Thống Quản Lý Khách Hàng (CRM)";
}

<div class="row mb-5">
    <div class="col-md-12">
        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                    color: white; 
                    padding: 50px; 
                    border-radius: 15px; 
                    text-align: center;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.2);">
            <h1 style="font-size: 3rem; font-weight: 700; margin-bottom: 20px;">
                <i class="fas fa-users-cog"></i> Hệ Thống Quản Lý Khách Hàng
            </h1>
            <p style="font-size: 1.3rem; opacity: 0.95; margin-bottom: 0;">
                Quản lý khách hàng toàn diện, chuyên nghiệp và hiệu quả (CRM System)
            </p>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="stats-box">
            <i class="fas fa-users" style="font-size: 2.5rem; margin-bottom: 10px; display: block;"></i>
            <h3>2,540</h3>
            <p>Khách Hàng</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-box">
            <i class="fas fa-address-book" style="font-size: 2.5rem; margin-bottom: 10px; display: block;"></i>
            <h3>4,820</h3>
            <p>Liên Hệ</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-box">
            <i class="fas fa-receipt" style="font-size: 2.5rem; margin-bottom: 10px; display: block;"></i>
            <h3>8,450</h3>
            <p>Hóa Đơn</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-box">
            <i class="fas fa-chart-line" style="font-size: 2.5rem; margin-bottom: 10px; display: block;"></i>
            <h3>45M</h3>
            <p>Doanh Thu</p>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-12">
        <h2 class="page-title"><i class="fas fa-th-large"></i> Module Quản Lý Khách Hàng</h2>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #667eea;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-users" style="font-size: 3rem; color: #667eea;"></i>
                </div>
                <h5 class="card-title text-center">👥 Quản Lý Khách Hàng</h5>
                <p class="card-text">Quản lý thông tin khách hàng, lịch sử mua hàng, liên lạc và tương tác.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #764ba2;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-address-card" style="font-size: 3rem; color: #764ba2;"></i>
                </div>
                <h5 class="card-title text-center">📇 Quản Lý Liên Hệ</h5>
                <p class="card-text">Quản lý thông tin liên hệ bổ sung của khách hàng (gia đình, bạn bè).</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "CustomerContact")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #f093fb;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-sticky-note" style="font-size: 3rem; color: #f093fb;"></i>
                </div>
                <h5 class="card-title text-center">📝 Quản Lý Ghi Chú</h5>
                <p class="card-text">Ghi chú về sở thích, thói quen mua hàng của từng khách hàng.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "CustomerNote")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #4facfe;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-shopping-cart" style="font-size: 3rem; color: #4facfe;"></i>
                </div>
                <h5 class="card-title text-center">🛒 Lịch Sử Mua Hàng</h5>
                <p class="card-text">Theo dõi lịch sử mua hàng và đơn hàng của từng khách hàng.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Cart")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #43e97b;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-receipt" style="font-size: 3rem; color: #43e97b;"></i>
                </div>
                <h5 class="card-title text-center">📄 Quản Lý Hóa Đơn</h5>
                <p class="card-text">Quản lý hóa đơn bán hàng và lịch sử giao dịch của khách hàng.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Invoice")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #fa709a;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-money-check-alt" style="font-size: 3rem; color: #fa709a;"></i>
                </div>
                <h5 class="card-title text-center">💳 Quản Lý Thanh Toán</h5>
                <p class="card-text">Theo dõi trạng thái thanh toán và công nợ của khách hàng.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Payment")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #a8edea;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-star" style="font-size: 3rem; color: #a8edea;"></i>
                </div>
                <h5 class="card-title text-center">⭐ Đánh Giá Khách Hàng</h5>
                <p class="card-text">Xem đánh giá và phản hồi của khách hàng về sản phẩm/dịch vụ.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "Review")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #ff6b6b;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-layer-group" style="font-size: 3rem; color: #ff6b6b;"></i>
                </div>
                <h5 class="card-title text-center">🏷️ Phân Loại Khách Hàng</h5>
                <p class="card-text">Phân loại khách hàng theo nhóm (VIP, Thường xuyên, Mới).</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "CustomerSegment")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Danh Sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card" style="border-top: 5px solid #4ecdc4;">
            <div class="card-body">
                <div style="text-align: center; margin-bottom: 15px;">
                    <i class="fas fa-chart-pie" style="font-size: 3rem; color: #4ecdc4;"></i>
                </div>
                <h5 class="card-title text-center">📊 Dashboard Khách Hàng</h5>
                <p class="card-text">Thống kê và phân tích dữ liệu khách hàng chi tiết.</p>
                <div class="text-center">
                    <a href="@Url.Action("Index", "CustomerDashboard")" class="btn btn-primary btn-sm">
                        <i class="fas fa-arrow-right"></i> Vào Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        border-bottom: 3px solid #667eea;
        padding-bottom: 15px;
    }
</style>
