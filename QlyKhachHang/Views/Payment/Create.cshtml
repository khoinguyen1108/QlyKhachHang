@model QlyKhachHang.Models.Payment

@{
    ViewData["Title"] = "Tạo Thanh Toán Mới";
}

@section Head {
    <link rel="stylesheet" href="~/css/payment-management.css" />
}

<div class="payment-form-container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-plus-circle"></i> Tạo Bản Ghi Thanh Toán Mới
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Invoice Selection -->
                        <div class="form-group mb-4">
                            <label asp-for="InvoiceId" class="form-label required">Hóa Đơn</label>
                            <select asp-for="InvoiceId" asp-items="ViewBag.InvoiceId" class="form-select" required>
                                <option value="">-- Chọn hóa đơn --</option>
                            </select>
                            <span asp-validation-for="InvoiceId" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Amount -->
                        <div class="form-group mb-4">
                            <label asp-for="Amount" class="form-label required">Số Tiền (VND)</label>
                            <input asp-for="Amount" type="number" step="0.01" min="0"
                                   class="form-control" placeholder="Nhập số tiền" required />
                            <span asp-validation-for="Amount" class="invalid-feedback d-block"></span>
                            @if (ViewData["RemainingAmount"] is decimal remainingAmount)
                            {
                                <small class="form-text text-muted">
                                    Còn lại: <strong>@remainingAmount.ToString("C")</strong>
                                </small>
                            }
                        </div>

                        <!-- Payment Method -->
                        <div class="form-group mb-4">
                            <label asp-for="PaymentMethod" class="form-label required">Phương Thức Thanh Toán</label>
                            <select asp-for="PaymentMethod" asp-items="ViewBag.PaymentMethods" class="form-select" required>
                                <option value="">-- Chọn phương thức --</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Transaction ID -->
                        <div class="form-group mb-4">
                            <label asp-for="TransactionId" class="form-label">Mã Giao Dịch (nếu có)</label>
                            <input asp-for="TransactionId" type="text" class="form-control"
                                   placeholder="Nhập mã giao dịch từ hệ thống thanh toán" />
                        </div>

                        <!-- Bank Info (for bank transfer) -->
                        <div id="bankInfoSection" style="display: none;" class="border-top pt-4 mt-4">
                            <h5 class="mb-3"><i class="fas fa-university"></i> Thông Tin Ngân Hàng</h5>

                            <div class="form-group mb-3">
                                <label asp-for="BankName" class="form-label">Tên Ngân Hàng</label>
                                <input asp-for="BankName" type="text" class="form-control"
                                       placeholder="Ví dụ: Vietcombank, Agribank, ..." />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankAccountNumber" class="form-label">Số Tài Khoản</label>
                                <input asp-for="BankAccountNumber" type="text" class="form-control"
                                       placeholder="Nhập số tài khoản" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankAccountName" class="form-label">Tên Chủ Tài Khoản</label>
                                <input asp-for="BankAccountName" type="text" class="form-control"
                                       placeholder="Nhập tên chủ tài khoản" />
                            </div>
                        </div>

                        <!-- Notes -->
                        <div class="form-group mb-4">
                            <label asp-for="Notes" class="form-label">Ghi Chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"
                                      placeholder="Nhập ghi chú (nếu có)"></textarea>
                        </div>

                        <!-- Submit -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Tạo Thanh Toán
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .payment-form-container {
        padding: 30px 0;
    }

    .form-card {
        border: none;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .form-label.required::after {
        content: " *";
        color: #dc3545;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paymentMethodSelect = document.querySelector('[name="PaymentMethod"]');
            const bankInfoSection = document.getElementById('bankInfoSection');

            // Show/hide bank info based on payment method
            function updateBankInfoVisibility() {
                if (paymentMethodSelect.value === 'Chuyển khoản ngân hàng') {
                    bankInfoSection.style.display = 'block';
                } else {
                    bankInfoSection.style.display = 'none';
                }
            }

            paymentMethodSelect.addEventListener('change', updateBankInfoVisibility);

            // Invoice selection change - fetch remaining amount
            const invoiceSelect = document.querySelector('[name="InvoiceId"]');
            invoiceSelect.addEventListener('change', function() {
                // This would require an API endpoint to get invoice details
                // For now, leaving as placeholder
            });

            // Form validation
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}