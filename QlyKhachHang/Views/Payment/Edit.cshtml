@model QlyKhachHang.Models.Payment

@{
    ViewData["Title"] = "Chỉnh Sửa Thanh Toán";
}

@section Head {
    <link rel="stylesheet" href="~/css/payment-management.css" />
}

<div class="payment-form-container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card form-card">
                <div class="card-header">
                    <i class="fas fa-edit"></i> Chỉnh Sửa Bản Ghi Thanh Toán
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="PaymentId" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <!-- Payment ID (readonly) -->
                        <div class="form-group mb-4">
                            <label class="form-label">Mã Thanh Toán</label>
                            <input type="text" class="form-control" value="@Model.PaymentId" disabled />
                        </div>

                        <!-- Invoice (readonly) -->
                        <div class="form-group mb-4">
                            <label class="form-label">Hóa Đơn</label>
                            <input type="text" class="form-control"
                                   value="@Model.Invoice?.InvoiceNumber - @Model.Invoice?.Customer?.CustomerName" disabled />
                            <input type="hidden" asp-for="InvoiceId" />
                        </div>

                        <!-- Amount -->
                        <div class="form-group mb-4">
                            <label asp-for="Amount" class="form-label required">Số Tiền (VND)</label>
                            <input asp-for="Amount" type="number" step="0.01" min="0"
                                   class="form-control" required />
                            <span asp-validation-for="Amount" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Payment Method -->
                        <div class="form-group mb-4">
                            <label asp-for="PaymentMethod" class="form-label required">Phương Thức Thanh Toán</label>
                            <select asp-for="PaymentMethod" asp-items="ViewBag.PaymentMethods" class="form-select" required>
                                <option value="">-- Chọn phương thức --</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Transaction ID -->
                        <div class="form-group mb-4">
                            <label asp-for="TransactionId" class="form-label">Mã Giao Dịch (nếu có)</label>
                            <input asp-for="TransactionId" type="text" class="form-control" />
                        </div>

                        <!-- Bank Info (for bank transfer) -->
                        <div id="bankInfoSection" style="display: none;" class="border-top pt-4 mt-4">
                            <h5 class="mb-3"><i class="fas fa-university"></i> Thông Tin Ngân Hàng</h5>

                            <div class="form-group mb-3">
                                <label asp-for="BankName" class="form-label">Tên Ngân Hàng</label>
                                <input asp-for="BankName" type="text" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankAccountNumber" class="form-label">Số Tài Khoản</label>
                                <input asp-for="BankAccountNumber" type="text" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankAccountName" class="form-label">Tên Chủ Tài Khoản</label>
                                <input asp-for="BankAccountName" type="text" class="form-control" />
                            </div>
                        </div>

                        <!-- Notes -->
                        <div class="form-group mb-4">
                            <label asp-for="Notes" class="form-label">Ghi Chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        </div>

                        <!-- Status Info -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Lưu ý:</strong> Chỉ có thể chỉnh sửa các bản ghi thanh toán đang chờ xác nhận.
                            Trạng thái hiện tại: <span class="badge bg-warning">@Model.Status</span>
                        </div>

                        <!-- Submit -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Lưu Thay Đổi
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.PaymentId" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .payment-form-container {
        padding: 30px 0;
    }

    .form-card {
        border: none;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .form-label.required::after {
        content: " *";
        color: #dc3545;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paymentMethodSelect = document.querySelector('[name="PaymentMethod"]');
            const bankInfoSection = document.getElementById('bankInfoSection');

            // Show/hide bank info based on payment method
            function updateBankInfoVisibility() {
                if (paymentMethodSelect.value === 'Chuyển khoản ngân hàng') {
                    bankInfoSection.style.display = 'block';
                } else {
                    bankInfoSection.style.display = 'none';
                }
            }

            paymentMethodSelect.addEventListener('change', updateBankInfoVisibility);
            updateBankInfoVisibility(); // Call on page load

            // Form validation
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}