@model QlyKhachHang.Models.Cart

@{
    ViewData["Title"] = "Tạo Giỏ Hàng";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="CustomerId" class="form-label">Khách Hàng</label>
                @{
                    var items = ViewData["CustomerId"] as SelectList;
                }
                <select asp-for="CustomerId" asp-items="items" class="form-control">
                    <option value="">-- Chọn Khách Hàng --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary">Tạo</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
