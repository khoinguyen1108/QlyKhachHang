@model IEnumerable<QlyKhachHang.Models.Cart>

@{
    ViewData["Title"] = "Danh Sách Gi? Hàng";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> T?o Gi? Hàng
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Khách Hàng</th>
                    <th>S? M?t Hàng</th>
                    <th>Ngày T?o</th>
                    <th>Ngày S?a</th>
                    <th>Hành ??ng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CartId</td>
                        <td>@item.Customer?.CustomerName</td>
                        <td>@item.CartItems.Count</td>
                        <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(item.ModifiedDate.HasValue ? item.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CartId" class="btn btn-info btn-sm btn-action">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.CartId" class="btn btn-warning btn-sm btn-action">
                                <i class="fas fa-edit"></i> S?a
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CartId" class="btn btn-danger btn-sm btn-action">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>Không có gi? hàng nào. <a asp-action="Create">T?o gi? hàng m?i</a></p>
    </div>
}
