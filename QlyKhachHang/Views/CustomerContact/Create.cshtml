@model QlyKhachHang.Models.CustomerContact
@{
    ViewData["Title"] = "Thêm Liên Hệ";
    var customerId = (int?)ViewData["CustomerId"];
    var customerName = ViewData["CustomerName"]?.ToString() ?? "";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Thêm Liên Hệ - <strong>@customerName</strong></h2>
            <hr>
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="CustomerId" value="@customerId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ContactName" class="form-label">Tên Liên Hệ *</label>
                            <input asp-for="ContactName" class="form-control" placeholder="Ví dụ: Nguyễn Văn A">
                            <span asp-validation-for="ContactName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ContactType" class="form-label">Loại Liên Hệ</label>
                            <select asp-for="ContactType" class="form-select">
                                <option value="Primary">Chính</option>
                                <option value="Secondary">Phụ</option>
                                <option value="Emergency">Khẩn Cấp</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số Điện Thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="0123456789">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="form-label">Email</label>
                            <input asp-for="EmailAddress" class="form-control" placeholder="email@example.com">
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Relationship" class="form-label">Mối Quan Hệ</label>
                    <input asp-for="Relationship" class="form-control" placeholder="Ví dụ: Cha, Mẹ, Anh, Chị, Bạn...">
                    <span asp-validation-for="Relationship" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="IsPreferred" class="form-check-input">
                    <label asp-for="IsPreferred" class="form-check-label">
                        Đánh dấu là liên hệ được ưu tiên
                    </label>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu Liên Hệ
                    </button>
                    <a asp-action="ByCustomer" asp-route-customerId="@customerId" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}