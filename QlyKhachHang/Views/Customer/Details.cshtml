@model QlyKhachHang.Models.Customer

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2>@ViewData["Title"] - @Model.CustomerName</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Sửa
        </a>
        <a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xóa
        </a>
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">

        <!-- Thông tin khách hàng chính -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-user"></i> Thông Tin Khách Hàng</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9"><span class="badge bg-primary">@Model.CustomerId</span></dd>

                    <dt class="col-sm-3">Tên:</dt>
                    <dd class="col-sm-9">@Model.CustomerName</dd>

                    <dt class="col-sm-3">Tên Đăng Nhập:</dt>
                    <dd class="col-sm-9">@Model.Username</dd>

                    <dt class="col-sm-3">Số Điện Thoại:</dt>
                    <dd class="col-sm-9">
                        <a href="tel:@Model.Phone"><i class="fas fa-phone"></i> @Model.Phone</a>
                    </dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.Email"><i class="fas fa-envelope"></i> @Model.Email</a>
                    </dd>

                    <dt class="col-sm-3">Địa Chỉ:</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Thành Phố:</dt>
                    <dd class="col-sm-9">@Model.City</dd>

                    <dt class="col-sm-3">Mã Bưu Điện:</dt>
                    <dd class="col-sm-9">@Model.PostalCode</dd>

                    <dt class="col-sm-3">Trạng Thái:</dt>
                    <dd class="col-sm-9">
                        @{
                            string statusClass = Model.Status switch
                            {
                                "Active" => "bg-success",
                                "Inactive" => "bg-warning",
                                "Blocked" => "bg-danger",
                                _ => "bg-secondary"
                            };
                            string statusText = Model.Status switch
                            {
                                "Active" => "Hoạt động",
                                "Inactive" => "Không hoạt động",
                                "Blocked" => "Bị khóa",
                                _ => "Khác"
                            };
                        }
                        <span class="badge @statusClass">@statusText</span>
                    </dd>

                    <dt class="col-sm-3">Ngày Tạo:</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Ngày Sửa:</dt>
                    <dd class="col-sm-9">@(Model.ModifiedDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa sửa")</dd>

                    <dt class="col-sm-3">Lần Đăng Nhập Cuối:</dt>
                    <dd class="col-sm-9">@(Model.LastLoginDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")</dd>
                </dl>
            </div>
        </div>

        <!-- Ghi chú liên hệ -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Ghi Chú (@Model.Notes?.Count ?? 0)</h5>
                <a asp-controller="CustomerNote" asp-action="Create" asp-route-customerId="@Model.CustomerId" class="btn btn-sm btn-light">
                    <i class="fas fa-plus"></i> Thêm Ghi Chú
                </a>
            </div>
            <div class="card-body">
                @if (Model.Notes?.Any() == true)
                {
                    <div class="list-group">
                        @foreach (var note in Model.Notes.OrderByDescending(n => n.CreatedDate).Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <span class="badge @(note.Priority switch { 
                                            "High" => "bg-danger", 
                                            "Urgent" => "bg-danger",
                                            "Normal" => "bg-primary",
                                            _ => "bg-secondary" 
                                        })">@note.Priority</span>
                                        <span class="badge bg-secondary">@note.NoteType</span>
                                        <p class="mb-1">@note.NoteContent</p>
                                        <small class="text-muted">@note.CreatedDate.ToString("dd/MM/yyyy HH:mm") bởi @note.CreatedBy</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <a asp-controller="CustomerNote" asp-action="ByCustomer" asp-route-customerId="@Model.CustomerId" class="btn btn-sm btn-info mt-2">
                        Xem Tất Cả Ghi Chú
                    </a>
                }
                else
                {
                    <p class="text-muted">Chưa có ghi chú nào.</p>
                }
            </div>
        </div>

        <!-- Liên hệ -->
        <div class="card mb-3">
            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-address-book"></i> Liên Hệ (@Model.Contacts?.Count ?? 0)</h5>
                <a asp-controller="CustomerContact" asp-action="Create" asp-route-customerId="@Model.CustomerId" class="btn btn-sm btn-light">
                    <i class="fas fa-plus"></i> Thêm Liên Hệ
                </a>
            </div>
            <div class="card-body">
                @if (Model.Contacts?.Any() == true)
                {
                    <div class="row">
                        @foreach (var contact in Model.Contacts.OrderByDescending(c => c.IsPreferred))
                        {
                            <div class="col-md-6 mb-2">
                                <div class="alert alert-light border">
                                    @if (contact.IsPreferred)
                                    {
                                        <span class="badge bg-success">Được Ưu Tiên</span>
                                    }
                                    <span class="badge bg-secondary">@contact.ContactType</span>
                                    <p class="mb-1"><strong>@contact.ContactName</strong> (@contact.Relationship)</p>
                                    <p class="mb-0">
                                        <i class="fas fa-phone"></i> @contact.PhoneNumber<br>
                                        <i class="fas fa-envelope"></i> @contact.EmailAddress
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                    <a asp-controller="CustomerContact" asp-action="ByCustomer" asp-route-customerId="@Model.CustomerId" class="btn btn-sm btn-info mt-2">
                        Quản Lý Liên Hệ
                    </a>
                }
                else
                {
                    <p class="text-muted">Chưa có liên hệ nào.</p>
                }
            </div>
        </div>

        <!-- Giỏ hàng -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Giỏ Hàng (@Model.Carts?.Count ?? 0)</h5>
            </div>
            <div class="card-body">
                @if (Model.Carts?.Any() == true)
                {
                    <ul class="list-group">
                        @foreach (var cart in Model.Carts.OrderByDescending(c => c.CreatedDate).Take(5))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Giỏ #@cart.CartId</strong><br>
                                    <small class="text-muted">Tạo: @cart.CreatedDate.ToString("dd/MM/yyyy")</small>
                                </div>
                                <a asp-controller="Cart" asp-action="Details" asp-route-id="@cart.CartId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Chi Tiết
                                </a>
                            </li>
                        }
                    </ul>
                    @if (Model.Carts.Count > 5)
                    {
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-sm btn-info mt-2">
                            Xem Tất Cả
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">Khách hàng chưa có giỏ hàng nào.</p>
                }
            </div>
        </div>

        <!-- Đánh giá -->
        <div class="card mb-3">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-star"></i> Đánh Giá (@Model.Reviews?.Count ?? 0)</h5>
            </div>
            <div class="card-body">
                @if (Model.Reviews?.Any() == true)
                {
                    @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedDate).Take(5))
                    {
                        <div class="alert alert-light border mb-2">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>⭐ @review.Rating/5</strong>
                                </div>
                                <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy")</small>
                            </div>
                            <p class="mb-1">@review.Comment</p>
                        </div>
                    }
                    <a asp-controller="Review" asp-action="Index" class="btn btn-sm btn-info">
                        Xem Tất Cả Đánh Giá
                    </a>
                }
                else
                {
                    <p class="text-muted">Khách hàng chưa có đánh giá nào.</p>
                }
            </div>
        </div>

        <!-- Hóa đơn -->
        <div class="card mb-3">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-receipt"></i> Hóa Đơn (@Model.Invoices?.Count ?? 0)</h5>
            </div>
            <div class="card-body">
                @if (Model.Invoices?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mã Hóa Đơn</th>
                                    <th>Tổng Tiền</th>
                                    <th>Trạng Thái</th>
                                    <th>Ngày</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model.Invoices.OrderByDescending(i => i.InvoiceDate).Take(5))
                                {
                                    <tr>
                                        <td><strong>@invoice.InvoiceNumber</strong></td>
                                        <td>@invoice.TotalAmount.ToString("C0")</td>
                                        <td>
                                            <span class="badge @(invoice.Status == "Paid" ? "bg-success" : "bg-warning")">
                                                @invoice.Status
                                            </span>
                                        </td>
                                        <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.Invoices.Count > 5)
                    {
                        <a asp-controller="Invoice" asp-action="Index" class="btn btn-sm btn-info">
                            Xem Tất Cả Hóa Đơn
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">Khách hàng chưa có hóa đơn nào.</p>
                }
            </div>
        </div>

    </div>

    <!-- Sidebar: Thống kê -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Thống Kê Khách Hàng</h5>
            </div>
            <div class="card-body">
                <div class="stat-item mb-3">
                    <span class="stat-label">Tổng Giỏ Hàng</span>
                    <span class="stat-value text-success">@Model.Carts?.Count ?? 0</span>
                </div>
                <div class="stat-item mb-3">
                    <span class="stat-label">Tổng Đánh Giá</span>
                    <span class="stat-value text-warning">@Model.Reviews?.Count ?? 0</span>
                </div>
                <div class="stat-item mb-3">
                    <span class="stat-label">Tổng Hóa Đơn</span>
                    <span class="stat-value text-danger">@Model.Invoices?.Count ?? 0</span>
                </div>
                <div class="stat-item mb-3">
                    <span class="stat-label">Tổng Liên Hệ</span>
                    <span class="stat-value text-info">@Model.Contacts?.Count ?? 0</span>
                </div>
                <div class="stat-item mb-3">
                    <span class="stat-label">Tổng Ghi Chú</span>
                    <span class="stat-value text-primary">@Model.Notes?.Count ?? 0</span>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Giá Trị Khách Hàng</h5>
            </div>
            <div class="card-body text-center">
                <h3 class="text-success">
                    @{
                        decimal totalRevenue = Model.Invoices?.Where(i => i.Status == "Paid").Sum(i => i.TotalAmount) ?? 0;
                    }
                    @totalRevenue.ToString("C0")
                </h3>
                <small>Tổng doanh thu từ hóa đơn đã thanh toán</small>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }
    .stat-item:last-child {
        border-bottom: none;
    }
    .stat-label {
        font-weight: 600;
        color: #666;
    }
    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
