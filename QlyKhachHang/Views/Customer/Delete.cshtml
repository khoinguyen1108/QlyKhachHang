@model QlyKhachHang.Models.Customer

@{
    ViewData["Title"] = "Xóa Khách Hàng";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-danger">@ViewData["Title"]</h2>

        <div class="alert alert-danger">
            <strong>Cảnh báo!</strong> Hành động này sẽ xóa khách hàng này vĩnh viễn.
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.CustomerId</dd>

                    <dt class="col-sm-3">Tên:</dt>
                    <dd class="col-sm-9">@Model.CustomerName</dd>

                    <dt class="col-sm-3">Số Điện Thoại:</dt>
                    <dd class="col-sm-9">@Model.Phone</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Địa Chỉ:</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Thành Phố:</dt>
                    <dd class="col-sm-9">@Model.City</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CustomerId" />
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-danger">Xóa</button>
            </div>
        </form>
    </div>
</div>
