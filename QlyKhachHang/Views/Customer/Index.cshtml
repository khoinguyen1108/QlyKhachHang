@model IEnumerable<QlyKhachHang.Models.Customer>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm Khách Hàng
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên Khách Hàng</th>
                    <th>Số Điện Thoại</th>
                    <th>Email</th>
                    <th>Địa Chỉ</th>
                    <th>Thành Phố</th>
                    <th>Ngày Tạo</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-info btn-sm">
                                Xem
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">
                                Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger btn-sm">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Không có khách hàng nào. <a asp-action="Create">Thêm khách hàng mới</a>
    </div>
}
